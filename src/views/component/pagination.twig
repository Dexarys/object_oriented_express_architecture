{% if lastPage > 1 %}
    {% set extremePagesLimit = 3 %}
    {% set nearbyPagesLimit = 2 %}

    <div class="">
        <ul class="pagination justify-content-center">
        {% if currentPage > 1 %}
            <li class="page-item"><a class="page-link" href="{{ paginationPath }}{{ currentPage-1 }}">&larr;</a></li>

            {% for i in range(1, extremePagesLimit) if ( i < currentPage - nearbyPagesLimit ) %}
                <li class="page-item"><a class="page-link" href="{{ paginationPath }}{{ i }}">{{ i }}</a></li>
            {% endfor %}

            {% if extremePagesLimit + 1 < currentPage - nearbyPagesLimit %}
                <li class="disabled page-item"><a class="page-link" href="#">...</a></li>
            {% endif %}

            {% for i in range(currentPage-nearbyPagesLimit, currentPage-1) if ( i > 0 ) %}
                <li class="page-item"><a class="page-link" href="{{ paginationPath }}{{ i }}">{{ i }}</a></li>
            {% endfor %}
        {% elseif showAlwaysFirstAndLast %}
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        {% endif %}

        <li class="active page-item"><a class="page-link" href="#">{{ currentPage }}</a></li>

        {% if currentPage < lastPage %}
            {% for i in range(currentPage+1, currentPage + nearbyPagesLimit) if ( i <= lastPage ) %}
                <li class="page-item"><a class="page-link" href="{{ paginationPath }}{{ i }}">{{ i }}</a></li>
            {% endfor %}

            {% if  (lastPage - extremePagesLimit) > (currentPage + nearbyPagesLimit) %}
               <li class="disabled page-item"><a class="page-link" href="#">...</a></li>
            {% endif %}

            {% for i in range(lastPage - extremePagesLimit+1, lastPage) if ( i > currentPage + nearbyPagesLimit ) %}
               <li class="page-item"><a class="page-link" href="{{ paginationPath }}{{ i }}">{{ i }}</a></li>
            {% endfor %}

            <li class="page-item"><a class="page-link" href="{{ paginationPath }}{{ currentPage+1 }}">&rarr;</a></li>
        {% elseif showAlwaysFirstAndLast %}
                <li class="page-item"><a class="page-link" href="{{ paginationPath }}{{ currentPage+1 }}">Next</a></li>
        {% endif %}
        </ul>
    </div>
{% endif %}